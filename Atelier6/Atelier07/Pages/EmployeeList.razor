@page "/"
@inherits BlazorApp_EmployeeList.Pages.EmployeeListBase
@page "/EmployeeDetails"
<h3>EmployeeList</h3>

<div class="card-group">
    @foreach (var employee in Employees)
    {
        <div class="card m-3" style="min-width: 18rem;max-width:30.auto%;" >
           <h3>@employee.FirstName @employee.LastName</h3>
        </div>
        <img class="card-img-top imageThumbnail" src="@employee.PhotoPath" />
        <div class="card-footer text-center">
            <a href="@($"editEmployee/{employee.EmployeeId}")" class="btn btn-primary m-1">Edit</a>
            <a href="@($"deleteEmployee/{employee.EmployeeId}")" class="btn btn-primary m-1">Delete</a>
            <a href="@($"EmployeeDetails/{employee.EmployeeId}")" class="btn btn-primary m-1">View</a>
        </div>
    }
</div>

